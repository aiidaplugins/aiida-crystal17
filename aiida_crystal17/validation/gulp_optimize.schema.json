{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "structure data required for geometry manipulation",
  "type": "object",
  "required": [
    "minimize",
    "relax"
  ],
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string"
    },
    "units": {
      "type": "string",
      "enum": [
        "real",
        "metal"
      ]
    },
    "relax": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "conp",
            "conv",
            "cellonly"
          ]
        },
        "pressure": {
          "type": "number"
        }
      }
    },
    "minimize": {
      "type": "object",
      "required": [
        "style"
      ],
      "properties": {
        "style": {
          "type": "string",
          "enum": [
            "cg",
            "nr",
            "dfp"
          ]
        },
        "max_iterations": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}